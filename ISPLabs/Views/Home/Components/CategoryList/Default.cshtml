@model IEnumerable<Category>
@foreach (Category cat in Model)
{
    <div class="p-10 row">
        <div class="col-lg-1">
            <img src="~/images/category-icon.png" height="20" width="20" />
        </div>
        <div class="col-lg-9 ml--60">
            <a href="~/Home/Category/@cat.Id">@cat.Name</a><br />
            <span class="small font-weight-light mt--10">@cat.Description</span>
        </div>
        <div class="col-lg-2">
            <span class="small clear">@Localizer["Topics"]: 0</span><br />
        </div>
    </div>
    <hr class="clear" />
}